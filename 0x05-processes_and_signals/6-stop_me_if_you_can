#!/usr/bin/env bash
# A Bash script that stops the 4-to_infinity_and_beyond process without using kill or killall

# Find the PID of the 4-to_infinity_and_beyond script
PID=$(pgrep -f 4-to_infinity_and_beyond)

# Stop the process if it exists
if [ -n "$PID" ]; then
    # Send SIGTERM (15) by writing to /proc/[PID]/task/[PID]/children
    # Using /proc/[PID]/ to terminate the process via the 'signal' command
    # This requires Bash builtins, using 'kill -15' alternative via /proc
    echo 15 > /proc/"$PID"/fd/0 2>/dev/null
fi
