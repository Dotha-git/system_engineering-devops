#!/usr/bin/env bash
# 7-highlander: prints "To infinity and beyond" indefinitely
# and reacts to SIGTERM by printing "I am invincible!!!"

# Trap SIGTERM and print a message instead of exiting
trap 'echo "I am invincible!!!"' TERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
