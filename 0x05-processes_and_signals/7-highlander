#!/usr/bin/env bash
# Prints messages indefinitely and responds to TERM signal immediately

# Trap TERM and print the required message
trap 'echo I am invincible!!!' TERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    # Replace long sleep with many short sleeps to catch signals quickly
    for i in {1..20}; do
        sleep 0.1
    done
done
