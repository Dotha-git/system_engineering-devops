#!/usr/bin/env bash
# Prints messages indefinitely and responds to TERM signal immediately

# Handle TERM signal
trap 'echo I am invincible!!!' TERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    # Sleep in small increments so signal can be caught immediately
    for i in {1..20}; do
        sleep 0.1
    done
done
