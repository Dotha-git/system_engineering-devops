#!/usr/bin/env bash
# 7-highlander: prints "To infinity and beyond" indefinitely
# reacts to SIGTERM by printing "I am invincible!!!"

trap 'echo "I am invincible!!!"' TERM

while true; do
    echo "To infinity and beyond"
    # Short sleeps to allow immediate SIGTERM handling
    sleep 0.2
    sleep 0.2
    sleep 0.2
    sleep 0.2
    sleep 0.2
    sleep 0.2
    sleep 0.2
    sleep 0.2
    sleep 0.2
    sleep 0.2
done
